<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DCalculatorFragment"
    android:orientation="vertical"
    >

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="New Button"
        android:id="@+id/from_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="btn_from_date_onClick" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="New Button"
        android:id="@+id/to_date"
        android:onClick="btn_to_date_onClick"

        android:focusableInTouchMode="false"
        android:singleLine="true" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginRight="30dp"
        android:textSize="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/howManyDays"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="false"
        android:text="0" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Days"
        android:textColor="#0C7489"
        android:id="@+id/textView2"
        android:layout_gravity="right|center_vertical" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CE000000"
        android:elevation="200dp"
        android:id="@+id/date_panel"
        android:visibility="visible">
        <DatePicker
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:background="#D7D9CE"
            android:id="@+id/datePicker"
            android:layout_gravity="center"
            android:elevation="250dp"
            android:nestedScrollingEnabled="true" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CE000000"
        android:elevation="200dp"
        android:id="@+id/date_panel1"
        android:visibility="visible">
        <DatePicker
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:background="#D7D9CE"
            android:id="@+id/datePicker1"
            android:layout_gravity="center"
            android:elevation="250dp"
            android:nestedScrollingEnabled="true" />

    </FrameLayout>


</FrameLayout>
